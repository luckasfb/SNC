<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="android:Theme.Holo.Light" >
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="BigText42_Hour">
		<item name="android:textStyle">bold</item>
		<item name="android:maxLines">1</item>
		<item name="android:textSize">90sp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
	</style>
	
	<style name="BigText42_Minute" parent="BigText42_Hour">
		<item name="android:textStyle">normal</item>
	</style>
	
	<style name="SmallText42_AM" parent="BigText42_Hour">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">normal</item>
	</style>
	
	<style name="SmallText42_Day" parent="SmallText42_AM">
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="SmallText42_Date" parent="SmallText42_Day">
		<item name="android:textStyle">normal</item>
	</style>
	
	
	<!-- 4x1 -->
	<style name="BigText2points" parent="BigText42_Hour">
		<item name="android:textSize">50sp</item>
	</style>
	<style name="BigText41_Hour" parent="BigText42_Hour">
		<item name="android:textSize">50sp</item>
	</style>
	
	<style name="BigText41_Minute" parent="BigText41_Hour">
		<item name="android:textStyle">normal</item>
	</style>
	
	<style name="SmallText41_AM" parent="SmallText42_AM">
		<item name="android:textSize">11sp</item>
	</style>
	
	<style name="SmallText41_Day" parent="SmallText42_Day">
		<item name="android:textSize">11sp</item>
	</style>
	
	<style name="SmallText41_Date" parent="SmallText42_Date">
		<item name="android:textSize">11sp</item>
	</style>
	

 
</resources>